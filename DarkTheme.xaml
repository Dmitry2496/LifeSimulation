<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero">


    <SolidColorBrush x:Key="WindowBackColor" Color="#FF282828"/>
    <SolidColorBrush x:Key="BorderColor" Color="DarkGray"/>
    <SolidColorBrush x:Key="TextColor" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="NotEnabledTextColor" Color="#FF646464"/>

    <SolidColorBrush x:Key="TopPanelColor" Color="#FF383838"/>
    <SolidColorBrush x:Key="TopButtonColor" Color="#FF383838"/>
    <SolidColorBrush x:Key="TopButtonSelectColor" Color="#FF282828"/>
    <SolidColorBrush x:Key="ButtonSelectTextColor" Color="WhiteSmoke"/>

    <SolidColorBrush x:Key="ButtonColor" Color="#FF383838"/>
    <SolidColorBrush x:Key="ButtonSelectColor" Color="Gray"/>

    <SolidColorBrush x:Key="ScrollArrowColor" Color="DarkGray"/>
    <SolidColorBrush x:Key="ScrollArrowSelectColor" Color="DeepSkyBlue"/>
    <SolidColorBrush x:Key="TextBoxBackColor" Color="#FF383838"/>


    <SolidColorBrush x:Key="SliderBackColor" Color="DarkGray"/>

    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF969696"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#FF969696"/>

    <Image x:Key="Icon" Source="Resources/Icon.png" Height="20" Width="20" Canvas.Left="5" Margin="-5,-5,-5,-5"/>


    <!-- #region Windows -->
    <Style x:Key="WindowsStyle" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{DynamicResource WindowBackColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        <Setter Property="WindowStyle" Value="None"/>
    </Style>
    <Style x:Key="WindowsConstSizeStyle" TargetType="{x:Type Window}" BasedOn="{StaticResource WindowsStyle}">
        <Setter Property="Background" Value="{DynamicResource WindowBackColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="3"/>
    </Style>
    <!-- #endregion -->


    <!-- #region Top Panel -->
    <Style x:Key="TopPanelStyle" TargetType="{x:Type Rectangle}">
        <Setter Property="Fill" Value="{DynamicResource TopPanelColor}"/>
        <Setter Property="Height" Value="20"/>
    </Style>
    <!-- #endregion -->


    <!-- #region Top Button -->
    <Style x:Key="TopButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Label x:Name="label" Background="{DynamicResource TopButtonColor}"  Content="{TemplateBinding Property=Button.Content}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="label" Property="Background" Value="{DynamicResource TopButtonSelectColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Image x:Key="ImageMinimize" Source="Resources/butMinimize.png" Height="100" Width="20" Margin="2,-5,-6,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>
    <Image x:Key="ImageMaximize" Source="Resources/butMaximize.png" Height="100" Width="20" Margin="0,-5,-6,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>
    <Image x:Key="ImageRestore" Source="Resources/butRestore.png" Height="100" Width="20" Margin="0,-5,-6,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>
    <Image x:Key="ImageClose" Source="Resources/butClose.png" Height="100" Width="20" Margin="0,-5,-6,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>


    <Style x:Key="ButtonMinimizeStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource TopButtonStyle}">
        <Setter Property="Content" Value="{StaticResource ImageMinimize}"/>
        <Setter Property="ToolTip" Value="Свернуть"/>
        <Setter Property="Canvas.Right" Value="60"/>
    </Style>
    <Style x:Key="ButtonMaximizeStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource TopButtonStyle}">
        <Setter Property="Content" Value="{StaticResource ImageMaximize}"/>
        <Setter Property="ToolTip" Value="Развернуть"/>
        <Setter Property="Canvas.Right" Value="30"/>
    </Style>
    <Style x:Key="ButtonRestoreStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource TopButtonStyle}">
        <Setter Property="Content" Value="{StaticResource ImageRestore}"/>
        <Setter Property="ToolTip" Value="Восстановить"/>
        <Setter Property="Canvas.Right" Value="30"/>
    </Style>
    <Style x:Key="ButtonCloseStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource TopButtonStyle}">
        <Setter Property="Content" Value="{StaticResource ImageClose}"/>
        <Setter Property="ToolTip" Value="Закрыть"/>
        <Setter Property="Canvas.Right" Value="0"/>
    </Style>
    <!-- #endregion -->

    <!-- #region Button -->
    <Style x:Key="button" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Label x:Name="buttContent"
                               Width="{TemplateBinding Width}" 
                               Height="{TemplateBinding Height}" 
                               Background="{DynamicResource ButtonColor}" 
                               Foreground="{DynamicResource TextColor}"  
                               HorizontalContentAlignment="Center" 
                               BorderBrush="{DynamicResource BorderColor}" 
                               BorderThickness="1"
                               Padding="5,0,5,0" 
                               Content="{TemplateBinding Property=Button.Content}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttContent" Property="Background" Value="{DynamicResource ButtonSelectColor}"/>
                            <Setter TargetName="buttContent" Property="Foreground" Value="{DynamicResource ButtonSelectTextColor}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="buttContent" Property="Foreground" Value="{DynamicResource NotEnabledTextColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="RepeatBtn" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border Name="Border" Margin="1" CornerRadius="0" Background="Transparent">
                        <Path Name="path" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{DynamicResource ScrollArrowColor}" 
                              Data="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="path" Property="Fill" Value="{DynamicResource ScrollArrowSelectColor}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="path" Property="Fill" Value="#FF006FA9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- endregion -->


    <!-- #region Slider -->
